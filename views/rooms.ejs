<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Room Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="container mt-5">
        <h1 class="mb-4">Hospital Rooms</h1>
        
        <% if (session.role === 'admin') { %>
            <a href="/room/new" class="btn btn-primary mb-3">Add New Room</a>
        <% } %>

        <div class="row">
            <% rooms.forEach(room => { %>
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Room <%= room.roomNumber %></h5>
                            <p class="card-text">
                                Type: <%= room.type %><br>
                                Status: <%= room.isOccupied ? 'Occupied' : 'Available' %><br>
                                <% if (room.currentPatient) { %>
                                    Patient: <%= room.currentPatient.firstName %> <%= room.currentPatient.lastName %>
                                <% } %>
                            </p>
                            <% if (session.role === 'admin' && !room.isOccupied) { %>
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#assignRoom<%= room._id %>">
                                    Assign Patient
                                </button>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>